<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="cn.edu.gdmec.s07150805.zcmol.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#3289C7">
    <ImageView
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:background="@drawable/menu"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/menu" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="主页"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:layout_width="28dp"
        android:layout_height="21dp"
        android:background="@drawable/qipao"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/menu"
        android:layout_alignParentRight="true"
        android:id="@+id/chat"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#3289C7"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="主页"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="分类"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/index_classify"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="发现"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/index_find"/>
        </RelativeLayout>
    </LinearLayout>
     <FrameLayout
         android:layout_width="match_parent"
         android:layout_height="220dp"
         android:background="#999">
         <android.support.v4.view.ViewPager
             android:id="@+id/viewpager"
             android:layout_width="match_parent"
             android:layout_height="220dp" />
         <TextView
             android:id="@+id/tv_bannertext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:gravity="center_horizontal"
             android:layout_marginTop="130dp"
             android:background="#33000000"
             android:textSize="20dp"
             android:padding="5dp"
             android:text="我是第一个广告语"
             android:textColor="@android:color/white" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@id/viewpager"
             android:orientation="vertical"
             android:padding="5dp"
             android:layout_gravity="right|bottom">
             <LinearLayout
                 android:id="@+id/points"
                 android:layout_width="match_parent"
                 android:layout_height="10dp"
                 android:gravity="center_horizontal"
                 android:orientation="horizontal" >
             </LinearLayout>
         </LinearLayout>
     </FrameLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_index">

    </ListView>

</LinearLayout>
