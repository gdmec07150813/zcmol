<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="cn.edu.gdmec.s07150805.zcmol.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3289C7">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="21dp"
            android:background="@drawable/menu"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="分类"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:layout_width="28dp"
            android:layout_height="21dp"
            android:background="@drawable/qipao"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@+id/menu"
            android:id="@+id/chat"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#3289C7"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="主页"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/classify_index"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="分类"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="发现"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/classify_find"/>
        </RelativeLayout>
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:gravity="center_horizontal"
        android:id="@+id/new_class"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:paddingTop="5dp"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"

        >
    </GridView>

</LinearLayout>
