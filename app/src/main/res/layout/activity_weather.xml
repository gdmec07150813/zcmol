<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9999"
    tools:context="cn.edu.gdmec.s07150805.zcmol.zcmol.WeatherActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/weather_back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:id="@+id/weather_back"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#ffffff"
                     android:textSize="18dp"
                     android:text="20:00"
                     android:id="@+id/weather_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:text="广州"
                    android:id="@+id/weather_city"/>
            </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/weather_refresh"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:id="@+id/weather_refresh"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/weather_search"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:id="@+id/weather_search"/>
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ffffff"
          android:textSize="50dp"
          android:text="21°C~25°C"
          android:id="@+id/weather_temperature"/>

    </LinearLayout>
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">
      <LinearLayout
          android:orientation="vertical"
          android:gravity="center_horizontal"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="晴"
              android:textSize="40dp"
              android:textColor="#ffffff"
              android:id="@+id/weather_status"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#ffffff"
              android:textSize="50dp"
              android:text="东南风"
              android:id="@+id/weather_find"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="不舒适"
              android:id="@+id/weather_fell"
              android:textColor="#ffffff"
              android:textSize="25dp"/>
      </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#555"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:text="周一"
                    android:id="@+id/weather_one"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="晴"
                    android:id="@+id/weather_one_one"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:text="周一"
                    android:id="@+id/weather_two" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/weather_two_two"
                    android:text="晴"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24dp"
                    android:text="周一"
                    android:id="@+id/weather_three"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="晴"
                    android:id="@+id/weather_three_three"/>

            </LinearLayout><LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="周一"
                android:id="@+id/weather_four"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:text="晴"
                android:id="@+id/weather_four_four"/>

        </LinearLayout><LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="周一"
                android:id="@+id/weather_five"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:id="@+id/weather_five_five"
                android:text="晴"/>

        </LinearLayout><LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:text="周一"
                android:id="@+id/weather_six"/>
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:id="@+id/weather_six_six"
                android:text="晴"/>
        </LinearLayout>




        </LinearLayout>
    </RelativeLayout>






</LinearLayout>
