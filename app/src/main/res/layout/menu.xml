<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="#738ffe"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/moon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已登录"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/zhuye"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#101010"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shoucang"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:textColor="#101010"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp"
            android:id="@+id/hengxian"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="16dp"
            android:textColor="#272727"
            android:layout_alignLeft="@+id/hengxian"
            android:layout_marginTop="105dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/guanyu"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#101010"
            android:textSize="18dp"
            android:id="@+id/about"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shezhi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:textColor="#101010"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/zhuxiao"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:layout_marginTop="104dp"
            android:gravity="center"
            android:textColor="#101010"
            android:textSize="18dp"
            android:id="@+id/exit"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>
